<!DOCTYPE html>
<html>
  <head>
    <title>PrepBlog2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="container">
      <div class="pull-right">
        <% if user_signed_in? %>
        Welcome <%= current_user.username %>!
        <% if gravatar_tag current_user.email? %>
        <%= gravatar_tag current_user.email, size: 30 %>
        <% else%>
        
          <%= image_tag current_user.avatar.url, size: 30%>
        <% end %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-warning"%>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
        <% end %>
      </div>
    <%= yield %>
    </div>
  </body>
</html>